<%# COMMENT NEW %>
<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 m-auto">
      <h1 class="text-primary display-4 mt-3 mb-3" >Add a new review to <%= campground.name %></h1>
      <form action="/campgrounds/<%= campground.slug %>/comments" method="post">
        <div class="form-group">
          <label class="text-muted" for="description">Leave a review</label>
          <textarea class="form-control" name="comment[text]" placeholder="Amazing Course!"></textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Review">
          <a class="btn btn-light text-secondary mt-2" href="javascript:history.back()">cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>