<%- include('partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 m-auto">
      <h1 class="text-primary display-4 mt-3 mb-3" >Sign Up</h1>
      <form action="/register" method="post">
        <div class="form-group">
          <label class="text-muted" for="name">Email</label>
          <input class="form-control " type="text" name="username" placeholder="Email" required>
        </div>
        <div class="form-group">
          <label class="text-muted" for="password">Password</label>
          <input class="form-control" type="password" name="password" placeholder="Password" required>
        </div>
        
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign Up">
          <a class="btn btn-light text-secondary mt-2" href="/campgrounds">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>